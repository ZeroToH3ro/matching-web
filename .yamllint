extends: relaxed

rules:
  line-length:
    max: 120
    level: warning
  indentation:
    spaces: 2
  trailing-spaces: enable
  empty-lines:
    max: 2
  key-duplicates: enable
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1
  commas:
    max-spaces-before: 0
    min-spaces-after: 1
    max-spaces-after: 1