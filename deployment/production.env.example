# Production Environment Configuration for Avatar Service
# Copy this file to .env.production and fill in the actual values

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================
NODE_ENV="production"
NEXT_PUBLIC_BASE_URL="https://your-production-domain.com"

# Database
DATABASE_URL="postgresql://username:password@your-db-host:5432/production_db?schema=public"

# Authentication
AUTH_SECRET="your-super-secure-auth-secret-at-least-32-characters-long"

# =============================================================================
# WALRUS PROTOCOL CONFIGURATION (PRODUCTION)
# =============================================================================

# Network Configuration
WALRUS_NETWORK="mainnet"

# Publisher Endpoints (Production Walrus Network)
WALRUS_PUBLISHER_URLS="https://publisher-1.walrus.space,https://publisher-2.walrus.space,https://publisher-3.walrus.space"

# Aggregator Endpoints (Production Walrus Network)
WALRUS_AGGREGATOR_URLS="https://aggregator-1.walrus.space,https://aggregator-2.walrus.space,https://aggregator-3.walrus.space"

# Walrus Performance Configuration
WALRUS_MAX_RETRIES="5"
WALRUS_TIMEOUT="60000"
WALRUS_RATE_LIMIT_RPS="20"
WALRUS_RATE_LIMIT_BURST="100"

# =============================================================================
# SUI BLOCKCHAIN & SEAL PROTOCOL CONFIGURATION (PRODUCTION)
# =============================================================================

# SUI Network Configuration
SUI_NETWORK="mainnet"
SUI_PRIVATE_KEY="your-production-sui-private-key"
SUI_GAS_OBJECT_ID="your-gas-object-id"

# Seal Protocol Configuration
SEAL_ENABLED="true"
SEAL_PACKAGE_ID="your-production-seal-package-id"
SEAL_SERVER_OBJECT_IDS="server-object-id-1,server-object-id-2,server-object-id-3"

# Gas Configuration
SEAL_MAX_GAS_AMOUNT="2000000000"
SEAL_GAS_BUDGET="200000000"

# =============================================================================
# STORAGE STRATEGY CONFIGURATION
# =============================================================================

# Primary storage strategy for production
STORAGE_STRATEGY="walrus"

# Fallback configuration (disabled in production)
CLOUDINARY_FALLBACK_ENABLED="false"

# =============================================================================
# AVATAR SERVICE CONFIGURATION
# =============================================================================

# Image Processing
IMAGE_QUALITY_WEBP="90"
IMAGE_QUALITY_JPEG="95"
IMAGE_MAX_SIZE="10485760"

# Caching Configuration
REDIS_URL="redis://your-redis-host:6379"
CDN_ENABLED="true"
CDN_BASE_URL="https://your-cdn-domain.com"

# Analytics Configuration
AVATAR_ANALYTICS_ENABLED="true"
ANALYTICS_BATCH_SIZE="100"
ANALYTICS_FLUSH_INTERVAL="15000"
ANALYTICS_RETENTION_DAYS="365"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate Limiting
PRODUCTION_RATE_LIMITING_ENABLED="true"
PRODUCTION_MAX_UPLOAD_SIZE="10485760"
PRODUCTION_ALLOWED_ORIGINS="https://your-domain.com,https://www.your-domain.com"

# Encryption
PRODUCTION_ENCRYPTION_REQUIRED="true"

# =============================================================================
# MONITORING & ALERTING
# =============================================================================

# Monitoring Configuration
PRODUCTION_MONITORING_ENABLED="true"
PRODUCTION_ALERT_WEBHOOK="https://your-monitoring-service.com/webhook"
PRODUCTION_METRICS_ENDPOINT="https://your-metrics-service.com/metrics"

# Health Check Configuration
HEALTH_CHECK_INTERVAL="300000"
HEALTH_CHECK_TIMEOUT="30000"

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Service (for notifications)
RESEND_API_KEY="your-resend-api-key"

# Push Notifications (optional)
PUSHER_APP_ID="your-pusher-app-id"
PUSHER_SECRET="your-pusher-secret"
PUSHER_CLUSTER="your-pusher-cluster"
NEXT_PUBLIC_PUSHER_APP_KEY="your-pusher-app-key"

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================

# Connection Pooling
DB_POOL_SIZE="20"
DB_POOL_TIMEOUT="30000"

# Cache Configuration
CACHE_TTL_AVATAR_PUBLIC="86400"
CACHE_TTL_AVATAR_PRIVATE="3600"
CACHE_TTL_METADATA="7200"

# CDN Configuration
CDN_CACHE_TTL="2592000"
CDN_EDGE_LOCATIONS="global"

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================

# Log Level (production should be 'info' or 'warn')
LOG_LEVEL="info"

# Error Tracking (optional)
SENTRY_DSN="your-sentry-dsn"
SENTRY_ENVIRONMENT="production"

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Avatar Features
AVATAR_FACE_SWAP_ENABLED="true"
AVATAR_ENCRYPTION_ENABLED="true"
AVATAR_ANALYTICS_ENABLED="true"
AVATAR_MODERATION_ENABLED="true"

# Performance Features
AVATAR_LAZY_LOADING_ENABLED="true"
AVATAR_PROGRESSIVE_LOADING_ENABLED="true"
AVATAR_CDN_ENABLED="true"

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="30"

# Disaster Recovery
DR_ENABLED="true"
DR_REGION="us-west-2"
DR_SYNC_INTERVAL="3600"

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================

# GDPR Compliance
GDPR_ENABLED="true"
DATA_RETENTION_DAYS="2555"

# Content Moderation
CONTENT_MODERATION_ENABLED="true"
AUTO_MODERATION_THRESHOLD="0.8"

# =============================================================================
# SCALING CONFIGURATION
# =============================================================================

# Auto-scaling
AUTO_SCALING_ENABLED="true"
MIN_INSTANCES="2"
MAX_INSTANCES="10"
SCALE_UP_THRESHOLD="70"
SCALE_DOWN_THRESHOLD="30"

# Load Balancing
LOAD_BALANCER_ENABLED="true"
HEALTH_CHECK_PATH="/api/health"

# =============================================================================
# MAINTENANCE
# =============================================================================

# Maintenance Mode
MAINTENANCE_MODE="false"
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."

# Update Configuration
AUTO_UPDATE_ENABLED="false"
UPDATE_CHANNEL="stable"